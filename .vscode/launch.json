{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [


        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
        
        },
        {
            "name": "Segmentation Linux",
            "type": "python",
            "request": "launch",
            "program": "/scratch/thesis/segmentation/train_segmentation.py",
            "args": [
                "--data_path" , "/scratch/thesis/data/scenes/scene0000_00"
    
            ]
        },
        {
            "name": "Segmentation Windows",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "--data_path" , "C:/Users/michi/OneDrive/Dokumente/ETH/BachelorThesis/code/thesis/data/scenes/scene0000_00"
            ]
        },

        {
            "name": "Python: Custom Args",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "--model_path" , "/scratch/thesis/segmentation/sem_seg/log6/model.ckpt",
                "--dump_dir" , "/scratch/thesis/segmentation/sem_seg/log6/dump",
                "--output_filelist" ,  "/scratch/thesis/segmentation/sem_seg/log6/output_filelist.txt:",
                "--room_data_filelist",  "/scratch/thesis/segmentation/sem_seg/meta/area6_data_label.txt",
                "--visu"
            ]
        },
        {
            "name": "Python Attach",
            "type": "python",
            "request": "attach",
            "localRoot": "${workspaceFolder}/segmentation",
            "remoteRoot": "/scratch/thesis/segmentation",  // Set to the program location on the remote computer.
            "port": 3000,                   // Set to the remote port
            "secret": "thesis",          // Set to your specific secret
            "host": "192.33.89.41" ,              // Set to your remote host

        },
        
        {
            "name": "Python: Terminal (integrated)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Terminal (external)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "debugOptions": [
                "RedirectOutput",
                "Django"
            ]
        },
        {
            "name": "Python: Flask (0.11.x or later)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/app.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ]
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "module.name"
        },
        {
            "name": "Python: Pyramid",
            "type": "python",
            "request": "launch",
            "args": [
                "${workspaceFolder}/development.ini"
            ],
            "debugOptions": [
                "RedirectOutput",
                "Pyramid"
            ]
        },
        {
            "name": "Python: Watson",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/console.py",
            "args": [
                "dev",
                "runserver",
                "--noreload=True"
            ]
        },
        {
            "name": "Python: All debug Options",
            "type": "python",
            "request": "launch",
            "pythonPath": "${config:python.pythonPath}",
            "program": "${file}",
            "module": "module.name",
            "env": {
                "VAR1": "1",
                "VAR2": "2"
            },
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "arg1",
                "arg2"
            ],
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}